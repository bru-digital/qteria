# ========================================
# Qteria Environment Configuration
# ========================================
# Copy this file to .env and fill in actual values
# Never commit .env to version control

# ----------------------------------------
# Database Configuration (PostgreSQL)
# ----------------------------------------
DB_HOST=localhost
DB_PORT=5432
DB_NAME=qteria_dev
DB_USER=postgres
DB_PASSWORD=postgres

# Full database URL (used by SQLAlchemy)
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# ----------------------------------------
# Redis Configuration (Job Queue + Cache)
# ----------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/0

# ----------------------------------------
# API Configuration (FastAPI Backend)
# ----------------------------------------
API_HOST=0.0.0.0
API_PORT=8000
API_URL=http://localhost:8000

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ----------------------------------------
# Frontend Configuration (Next.js)
# ----------------------------------------
NEXT_PUBLIC_API_URL=http://localhost:8000/v1

# ----------------------------------------
# Authentication (Auth.js)
# ----------------------------------------
# Generate secret: openssl rand -base64 32
NEXTAUTH_SECRET=your-super-secret-key-change-in-production-min-32-chars
NEXTAUTH_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your-jwt-secret-change-in-production-min-32-chars
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ----------------------------------------
# File Storage (Vercel Blob / S3)
# ----------------------------------------
# Option 1: Vercel Blob (for MVP)
BLOB_READ_WRITE_TOKEN=vercel_blob_token_here

# Option 2: AWS S3 (if migrating from Blob)
# AWS_ACCESS_KEY_ID=your_aws_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret
# AWS_S3_BUCKET=qteria-documents
# AWS_REGION=us-east-1

# ----------------------------------------
# AI Configuration (Claude / Anthropic)
# ----------------------------------------
ANTHROPIC_API_KEY=sk-ant-your-api-key-here

# Claude model selection
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# AI processing limits
MAX_AI_RETRIES=3
AI_TIMEOUT_SECONDS=300

# ----------------------------------------
# Background Jobs (Celery)
# ----------------------------------------
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json

# ----------------------------------------
# Email (Optional - for notifications)
# ----------------------------------------
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USER=apikey
# SMTP_PASSWORD=your_sendgrid_api_key
# SMTP_FROM_EMAIL=noreply@qteria.com

# ----------------------------------------
# Monitoring & Logging
# ----------------------------------------
# Sentry DSN (error tracking)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ----------------------------------------
# Development Tools
# ----------------------------------------
# PgAdmin credentials
PGADMIN_EMAIL=admin@qteria.local
PGADMIN_PASSWORD=admin

# ----------------------------------------
# Environment
# ----------------------------------------
NODE_ENV=development
PYTHON_ENV=development

# ----------------------------------------
# Feature Flags (Optional)
# ----------------------------------------
# FEATURE_DOCUMENT_REPROCESSING=true
# FEATURE_BATCH_ASSESSMENTS=false
# FEATURE_AI_CONFIDENCE_SCORING=true
