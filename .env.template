# ===================================
# QTERIA - Environment Variables Template
# ===================================
# Copy this file to .env and fill in the values

# ===================================
# Database Configuration
# ===================================
DATABASE_URL="postgresql://user:password@host:5432/qteria_dev"

# ===================================
# Authentication & Security
# ===================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-here-min-32-chars"
NEXTAUTH_URL="http://localhost:3000"

# JWT Secret (must match between frontend and backend)
# Generate with: openssl rand -base64 32
JWT_SECRET="your-jwt-secret-here-min-32-chars"

# ===================================
# API Configuration
# ===================================
# Backend API URL (FastAPI)
NEXT_PUBLIC_API_URL="http://localhost:8000"
API_URL="http://localhost:8000"

# ===================================
# OAuth Providers (Optional)
# ===================================
# Microsoft Entra ID (Azure AD)
# MICROSOFT_CLIENT_ID="your-client-id"
# MICROSOFT_CLIENT_SECRET="your-client-secret"
# MICROSOFT_TENANT_ID="your-tenant-id"

# Google OAuth
# GOOGLE_CLIENT_ID="your-client-id"
# GOOGLE_CLIENT_SECRET="your-client-secret"

# ===================================
# AI Provider (Claude)
# ===================================
ANTHROPIC_API_KEY="your-anthropic-api-key"

# ===================================
# File Storage
# ===================================
# Vercel Blob (production)
# BLOB_READ_WRITE_TOKEN="your-vercel-blob-token"

# ===================================
# Redis (Background Jobs)
# ===================================
# REDIS_URL="redis://localhost:6379"

# ===================================
# Monitoring & Logging (Optional)
# ===================================
# SENTRY_DSN="your-sentry-dsn"
# LOG_LEVEL="info"

# ===================================
# Development & Testing
# ===================================
NODE_ENV="development"
# For testing, use a separate database:
# DATABASE_URL="postgresql://user:password@host:5432/qteria_test"
